{
  "name": "server.copyfi",
  "version": "1.0.0",
  "description": "copyFi Node Backend",
  "main": "dist/main/server.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:watch": "npm run build -- --watch",
    "dev": "nodemon -L --watch ./dist ./dist/main/server.js",
    "up": "concurrently --kill-others-on-fail \"npm run build:watch\" \"docker-compose up\"",
    "down": "docker-compose down",
    "test": "jest --passWithNoTests --runInBand",
    "test:staged": "npm run test -- --findRelatedTests",
    "test:ci": "npm run test -- --coverage",
    "lint": "eslint --ignore-path .gitignore --ext .ts --fix",
    "prepare": "husky install"
  },
  "author": "Zameel Abdul Sammed",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@shelf/jest-postgres": "^1.1.0",
    "@shelf/postgres-local": "^1.0.5",
    "@types/aws-sdk": "^2.7.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/multer": "^1.4.7",
    "@types/multer-s3": "^3.0.0",
    "@types/node": "^18.14.0",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.35.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jest": "^29.4.3",
    "lint-staged": "^13.1.2",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^2.0.20",
    "rimraf": "^4.1.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "aws-sdk": "^2.1343.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "inversify": "^6.0.1",
    "joi": "^17.8.3",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "multer-s3": "^3.0.1",
    "pg": "^8.9.0",
    "reflect-metadata": "^0.1.13",
    "twilio": "^4.8.0",
    "typeorm": "^0.3.12",
    "validator": "^13.9.0",
    "winston": "^3.8.2"
  },
  "_moduleAliases": {
    "@main": "dist/main",
    "@modules": "dist/modules"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run test:staged"
    ]
  },
  "engines": {
    "node": "18.x"
  }
}
